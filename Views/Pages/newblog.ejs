<% layout('layouts/boilerplate') %>
<div class="col-6">
    <h2>Write a Blog</h2>
    <form action="/blog" method="POST" class="mb-3 validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-range" type="text"  name="title" id="title">
        </div>
        <div class="mb-3">
            <label class="form-label" for="content">Content</label>
            <textarea class="form-control" name="content" id="content" cols="30" rows="3" required></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>


 