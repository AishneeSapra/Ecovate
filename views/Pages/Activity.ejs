<% layout('layouts/boilerplate')%>
   <div class="container mt-5 text-center">
    <h1 class="display-4 text-success font-weight-bold">All Activities</h1>
    <% for (let activity of activities){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=activity.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= activity.title %> </h5>
                        <p class="card-text"><%= activity.description %></p>
                        
                        <a class="btn btn-primary" href="/activity/<%=activity._id%>">View <%=activity.title%></a>
                    </div>
                </div>
            </div>
        </div>
        
    
        <% }%>